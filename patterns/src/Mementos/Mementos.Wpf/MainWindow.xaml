<Window x:Class="Mementos.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mementos.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="520">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <local:InkCanvasWithUndo Height="Auto" Grid.Column="0" x:Name="canvas"
                                 HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Height="28" HorizontalAlignment="Right" Margin="0" x:Name="label1"
               VerticalAlignment="Top" Width="38" Grid.Column="1" />
    </Grid>
</Window>
